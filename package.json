{
  "name": "corridor-website",
  "version": "2.0.0",
  "description": "Corridor - Urban Sport Hub van Gentbrugge met Supabase backend",
  "scripts": {
    "build": "npm run build:css && node scripts/build-config.js",
    "build:css": "node scripts/build-css.js",
    "dev": "npm run build && concurrently \"npm run watch:css\" \"npm run serve\"",
    "watch:css": "node scripts/watch-css.js",
    "serve": "node server.js",
    "start": "npm run dev",
    "start:simple": "live-server --port=8000 --open=/",
    "optimize:videos": "powershell -ExecutionPolicy Bypass -File scripts/optimize-videos.ps1",
    "optimize:images": "powershell -ExecutionPolicy Bypass -File scripts/convert-to-webp.ps1",
    "optimize:all": "npm run optimize:videos && npm run optimize:images"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "chokidar": "^5.0.0",
    "concurrently": "^9.2.1",
    "dotenv": "^16.3.1",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}
